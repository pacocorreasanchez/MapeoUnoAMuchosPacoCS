<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="es.albarregas.beans.PersonaList" table="personas">
    <id column="idPersona" name="idPersona">
      <generator class="identity"/>
    </id>
    <property name="nombre">
      <column length="30" name="nombre" not-null="true"/>
    </property>
    <list cascade="all" name="libros">
      <key>
        <column name="personaId"/>
      </key>
      <index>
        <column name="orden"/>
      </index>
      <one-to-many class="es.albarregas.beans.Libro"/>
    </list>
  </class>
</hibernate-mapping>
